
.chat-main
  .chat-main__main-header
    .left-header
      .header-group
        = @group.name
      .header-name
        - @group.users.each do |user|
          = user.name
    .right-header
      .edit-flame
        = link_to edit_group_path(current_user), class: "edit__btn" do
          Edit

  .chat-main__message-list
    .messages
      = render @messages
    .submit
      .submit-right
    .comment

  .chat-main__message-form 
    = form_for [@group, @message] do |f|
      .left-form
        .text
          = f.text_field :content, class: 'texts', placeholder: 'type a message'
        .image
          = f.label :image, class: 'image__btn' do
            = icon('fas', 'image', 'class': 'icon')
            = f.file_field :image, class: 'images'
      .ringht-form
        = f.submit 'Send', class: 'send__btn'